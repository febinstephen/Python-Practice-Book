def select_anagrams(a,b):
	from itertools import permutations
	i = 0
	count = 0
	perm = []
	output = []
	while i < len(a):
		perm = [''.join(p) for p in permutations(a)]
		i = i+1
	print perm
	for i in perm:
		for j in b:
			if i == j:
				output.append(j)
	return output		 

select_anagrams("art", ["tar", "cat", "dog", "rat"])
