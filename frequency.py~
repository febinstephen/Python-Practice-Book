#word frequency using dict
words = []
frequency = {} #dict
words = open('foo.txt').read().split()
for w in words:
	frequency[w] = frequency.get(w,0)+1
for key,value in frequency.items():
	print key,value

b = [] 	 

for val in frequency.values():
	b.append(val)

print b 

test = [12,45,7]
l = len(b)

for i in range(l):
	for j in range(i+1,l):
		if b[i] < b[j]:
			temp = b[i]
			b[i] = b[j]
			b[j] = temp

print b

for i in b:
	for key,value in frequency.items():
		if i == value:
			print key,value
	
